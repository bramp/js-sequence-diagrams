document ::= statement*

statement ::=
	( 'title' ':' message
	| 'participant' actor ('as' alias)?
	| 'note' (
		( 'left of' | 'right of') actor
		| 'over' (actor | actor ',' actor)
		) ':' message
	| arrow
	| 'alt' message arrow+ ('else' arrow)+ 'end'
	)

/*
message ::= [^\n]+

actor ::= [^\->:\n,]+

arrow ::= actor ( '-' | '--' ) ( '>' | '>>' )? actor ':' message
*/
